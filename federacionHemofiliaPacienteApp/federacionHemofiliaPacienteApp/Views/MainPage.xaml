<Page
    x:Class="federacionHemofiliaPacienteApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:federacionHemofiliaPacienteApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="emailLabel" HorizontalAlignment="Left" Text="Correo Electronico" Margin="65,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="179" FontSize="18.667" />
        <TextBox x:Name="email" Margin="65,183,54,0" TextWrapping="Wrap" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <TextBlock x:Name="passwordLabel" HorizontalAlignment="Left" Text="Contraseña" Margin="65,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="33" Width="179" FontSize="18.667" />
        <PasswordBox x:Name="passwordBox" Margin="65,258,54,0" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition"/>
        <Button x:Name="loginBtn" Content="Iniciar Sesion" HorizontalAlignment="Stretch" Margin="65,0,54,230" VerticalAlignment="Bottom" Height="80" d:LayoutOverrides="LeftPosition, RightPosition" FontSize="21.333" Click="loginBtn_Click"/>

    </Grid>
</Page>
